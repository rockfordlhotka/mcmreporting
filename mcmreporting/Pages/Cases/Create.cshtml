@page
@model mcmreporting.Pages.Cases.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Case</h4>
<hr />
<div class="row">
    <div class="col-md-4">
      <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
          <label asp-for="CaseEdit.MCMNumber" class="control-label"></label>
          <input asp-for="CaseEdit.MCMNumber" class="form-control" />
          <span asp-validation-for="CaseEdit.MCMNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label asp-for="CaseEdit.IntakeDate" class="control-label"></label>
          <input asp-for="CaseEdit.IntakeDate" class="form-control" />
          <span asp-validation-for="CaseEdit.IntakeDate" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label asp-for="CaseEdit.City" class="control-label"></label>
          <input asp-for="CaseEdit.City" class="form-control" />
          <span asp-validation-for="CaseEdit.City" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label asp-for="CaseEdit.County" class="control-label"></label><br />
          <select asp-for="CaseEdit.CountyId">
            @foreach (var item in Model.CountyList)
            {
              <option value="@item.Id" label="@item.Name" />
            }
          </select>
          <span asp-validation-for="CaseEdit.CountyId" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label asp-for="CaseEdit.State" class="control-label"></label><br />
          <select asp-for="CaseEdit.State">
            @foreach (var item in Model.StateList)
            {
              <option value="@item.Name" label="@item.Name" />
            }
          </select>
          <span asp-validation-for="CaseEdit.State" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label asp-for="CaseEdit.School" class="control-label"></label><br />
          <select asp-for="CaseEdit.SchoolId">
            @foreach (var item in Model.SchoolList)
            {
              <option value="@item.Id" label="@item.Name" />
            }
          </select>
          <span asp-validation-for="CaseEdit.SchoolId" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label asp-for="CaseEdit.ReferralType" class="control-label"></label><br />
          <select asp-for="CaseEdit.ReferralType">
            @foreach (var item in Model.ReferralTypeList)
            {
              <option value="@item" label="@item" />
            }
          </select>
          <span asp-validation-for="CaseEdit.ReferralType" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label asp-for="CaseEdit.Age" class="control-label"></label>
          <input asp-for="CaseEdit.Age" class="form-control" />
          <span asp-validation-for="CaseEdit.Age" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label asp-for="CaseEdit.Gender" class="control-label"></label><br />
          <select asp-for="CaseEdit.Gender">
            @foreach (var item in Model.GenderTypeList)
            {
              <option value="@item" label="@item" />
            }
          </select>
          <span asp-validation-for="CaseEdit.Gender" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label class="control-label">Race/Ethnicity</label>
          <ul>
            @for (int i = 0; i < Model.RaceEthnicityList.Count - 1; i++)
            {
              <li>
                <input type="checkbox" asp-for="RaceEthnicityList[i].IsChecked" />
                <label asp-for="RaceEthnicityList[i].Id" class="control-label">@Model.RaceEthnicityList[i].Name</label>
                <input asp-for="RaceEthnicityList[i].Id" type="hidden" />
                <input asp-for="RaceEthnicityList[i].Name" type="hidden" />
              </li>
            }
          </ul>
        </div>
        <div class="form-group">
          <label asp-for="CaseEdit.LastSeen" class="control-label"></label>
          <input asp-for="CaseEdit.LastSeen" class="form-control" />
          <span asp-validation-for="CaseEdit.LastSeen" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label asp-for="CaseEdit.ReportedMissing" class="control-label"></label>
          <input asp-for="CaseEdit.ReportedMissing" class="form-control" />
          <span asp-validation-for="CaseEdit.ReportedMissing" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label asp-for="CaseEdit.PeopleServed" class="control-label"></label>
          <input asp-for="CaseEdit.PeopleServed" class="form-control" />
          <span asp-validation-for="CaseEdit.PeopleServed" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label asp-for="CaseEdit.StartCaseType" class="control-label"></label><br />
          <select asp-for="CaseEdit.StartCaseType">
            @foreach (var item in Model.CaseTypeList)
            {
              <option value="@item" label="@item" />
            }
          </select>
          <span asp-validation-for="CaseEdit.StartCaseType" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label asp-for="CaseEdit.EndCaseType" class="control-label"></label><br />
          <select asp-for="CaseEdit.EndCaseType">
            @foreach (var item in Model.CaseTypeList)
            {
              <option value="@item" label="@item" />
            }
          </select>
          <span asp-validation-for="CaseEdit.EndCaseType" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label asp-for="CaseEdit.Disposition" class="control-label"></label><br />
          <select asp-for="CaseEdit.Disposition">
            @foreach (var item in Model.DispositionTypeList)
            {
              <option value="@item" label="@item" />
            }
          </select>
          <span asp-validation-for="CaseEdit.Disposition" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label asp-for="CaseEdit.CloseDate" class="control-label"></label>
          <input asp-for="CaseEdit.CloseDate" class="form-control" />
          <span asp-validation-for="CaseEdit.CloseDate" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label asp-for="CaseEdit.CaseStatus" class="control-label"></label><br />
          <select asp-for="CaseEdit.CaseStatus">
            @foreach (var item in Model.CaseStatusList)
            {
              <option value="@item" label="@item" />
            }
          </select>
          <span asp-validation-for="CaseEdit.CaseStatus" class="text-danger"></span>
        </div>
        <div class="form-group">
          <input type="submit" value="Create" class="btn btn-default" />
        </div>
      </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
